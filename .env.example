# PostgreSQL Configuration
POSTGRES_USER=graph
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
POSTGRES_DB=graph-node

# Mantle Sepolia RPC Configuration
MANTLE_SEPOLIA_RPC=https://rpc.sepolia.mantle.xyz

# Graph Node Configuration
GRAPH_LOG_LEVEL=info
GRAPH_ALLOW_NON_DETERMINISTIC_IPFS=false

# Subgraph Deployment
SUBGRAPH_NAME=gmx/synthetics-mantle-sepolia
GRAPH_NODE_ADMIN_ENDPOINT=http://localhost:8020
GRAPH_NODE_IPFS_ENDPOINT=http://localhost:5001

# Optional: Advanced Settings (uncomment to use)
# ETHEREUM_REORG_THRESHOLD=50
# GRAPH_ETHEREUM_MAX_BLOCK_RANGE_SIZE=2000
# GRAPH_ETHEREUM_TARGET_TRIGGERS_PER_BLOCK_RANGE=100
